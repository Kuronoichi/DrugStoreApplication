<Window x:Class="DrugStoreApplication.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrugStoreApplication"
        mc:Ignorable="d"
        Title="LoginWindow" Height="600" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="0.25*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.25*"/>
        </Grid.ColumnDefinitions>
        
        <Image Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="3" Grid.RowSpan="2" Stretch="Uniform" Source="Source/logo.png"/>
        
        <TextBlock Grid.Column="2" Grid.Row="4" FontSize="20px" Text="Логин" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        
        <TextBlock Grid.Column="2" Grid.Row="5" FontSize="20px" Text="Пароль" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        
        <TextBox Grid.Column="3" Grid.Row="4" Grid.ColumnSpan="2" x:Name="TB_Login" FontSize="18px" Text="Admin" VerticalContentAlignment="Center" Margin="20px" Padding="5px"/>
        
        <TextBox Grid.Column="3" Grid.Row="5" Grid.ColumnSpan="2" x:Name="TB_Password" FontSize="18px" Text="12345" VerticalContentAlignment="Center" Margin="20px" Padding="5px"/>
        
        <Button Grid.Column="2" Grid.Row="6" Grid.ColumnSpan="3" x:Name="BTN_Login" FontSize="20px" Content="Войти в систему" Margin="20px" Click="BTN_Login_OnClick" />
    </Grid>
</Window>
